<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="15dp">

        <ImageView
            android:id="@+id/carImg"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/profile6" />

        <TextView
            android:id="@+id/carType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/carImg"
            android:text="Cab Type"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/carType"
            android:layout_below="@+id/carType"
            android:layout_marginTop="3dp"
            android:text="2 minutes away"
            android:textColor="@color/dark_grey" />

        <TextView
            android:id="@+id/carExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/carType"
            android:layout_below="@+id/carTime"
            android:layout_marginTop="5dp"
            android:text="Surcharge : 1.3x | Base : 100"
            android:textSize="13sp"
            android:textStyle="italic" />
    </RelativeLayout>
</android.support.v7.widget.CardView>